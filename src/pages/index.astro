---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import shortcuts from '../content/shortcuts';
import LinkCard from '../components/LinkCard.astro';
import referenceSheet from '../content/referenceSheet';
import ReferenceItem from '../components/ReferenceItem.astro';

---

<Layout title="OpenBot Reference">
	<main>
		<Container printHidden={true}>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-2 justify-center">
				{Object.values(shortcuts).map(shortcut => <LinkCard {...shortcut} />)}
			</div>
		</Container>
		<Container fullWidth={true}>
			<div class="grid md:grid-cols-[38%_24%_38%] gap-2">
				<div class="ref-panel">
					<h1 class="text-xl font-semibold">Inputs</h1>
					{Object.values(referenceSheet.input.entries).map(entry => <ReferenceItem {...entry} />)}
				</div>
				<div class="ref-panel">
					<h1 class="text-xl font-semibold">Terms</h1>
					{Object.values(referenceSheet.terms.entries).map(entry => <ReferenceItem {...entry} />)}
					<h1 class="mt-4 text-xl font-semibold">Queries</h1>
					{Object.values(referenceSheet.queries.entries).map(entry => <ReferenceItem {...entry} />)}
				</div>
				<div class="ref-panel">
					<h1 class="text-xl font-semibold">Outputs</h1>
					{Object.values(referenceSheet.output.entries).map(entry => <ReferenceItem {...entry} />)}
				</div>
			</div>
		</Container>
	</main>
</Layout>

<style lang="scss">
	.ref-panel {
		@apply p-2 flex-initial;
	}
</style>
